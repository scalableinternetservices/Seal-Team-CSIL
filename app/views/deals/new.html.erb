 <h1 class='center'> New Deal </h1>
  <%= form_for :deal, :html => {:class => "form-horizontal"}, url: create_deal_path(:id => @user.id) do |f| %>
    <div class="form-group", style="width:35%;margin-left: auto;margin-right: auto;padding-bottom:50px;">
      <%= f.label :food_name, "Food Name:" %>
      <%= f.text_field :food_name, class: "form-control" %>
    </div>

    <div class="form-group", style="width:35%;margin-left: auto;margin-right: auto;">
      <%= f.label :street_address, "Street Address:" %>
      <%= f.text_field :street_address, class: "form-control" %>
    </div>

    <div class="form-group", style="width:35%;margin-left: auto;margin-right: auto;">
      <%= f.label :city, "City:" %>
      <%= f.text_field :city, class: "form-control" %>
    </div>    

    <div class="form-group", style="width:35%;margin-left: auto;margin-right: auto;">
      <%= f.label :zip_code, "Zip Code:" %>
      <%= f.text_field :zip_code, class: "form-control" %>
    </div>   

    <div class="form-group", style="width:35%;margin-left: auto;margin-right: auto;padding-bottom:30px;">
      <%= f.label :state, "State:" %>
      <%= f.collection_select :state, 
                          stateList, 
                          :to_s, :to_s, :include_blank => true, class: "form-control" %>
    </div>

    <div class="form-group", style="width:35%;margin-left: auto;margin-right: auto;">
      <%= f.label :deal_type, "Deal Type:" %>
      <%= f.text_field :deal_type, class: "form-control" %>
    </div>

    <div class="form-group", style="width:35%;margin-left: auto;margin-right: auto;">
       <%= f.label :food_type, "Food Type:" %>
       <%= f.collection_select :food_type, Deal::FOOD_TYPES, :to_s, :to_s,
                               :include_blank => true, class: "form-control" %>
    </div>

    <div class="form-group", style="width:35%;margin-left: auto;margin-right: auto;">
      <%= f.label :start_time, "Start Time:" %>
      <%= f.datetime_select(:start_time, start_year: 2015, ampm: true) %>
    </div>

    <div class="form-group", style="width:35%;margin-left: auto;margin-right: auto;padding-bottom:30px;">
      <%= f.label :end_time, "End Time:" %>
      <%= f.datetime_select(:end_time, start_year: 2015, ampm: true) %>
    </div>

    <%= f.submit "Submit", class: "btn btn-info btn-circle btn-xl", style:"width:35%;display:table;
   margin:0 auto" %>
  <% end %>

 <br><br>
 <p class = 'center'> <%= link_to "Show Food Deals", show_deals_path(@user) %>
                        | <%= link_to "Edit Profile", edit_user_path(@user) %> </p>
