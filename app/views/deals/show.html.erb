<h1> Current Deals </h1>
<div class="table-responsive">
  <table class="table">
    <tr> 
      <th> Food Name </th> 
      <th> Description </th>
      <th> Location </th>
      <th> Deal Type </th>
      <th> Start Time </th>
      <th> End Time </th>
      <th> Foot Type </th>
      <th> Edit </th>
    </tr>
    <% @deals.each do |deal| %>
      <tr>
        <td> <%= deal.food_name %> </td>
        <td> <%= deal.description %></td>
        <td> <%= deal.address %></td>
        <td> <%= deal.deal_type %></td>
        <td> <%= deal.start_time %> </td>
        <td> <%= deal.end_time %> </td>
        <td> <%= deal.food_type %></td>
        <td> <%= link_to "Edit This Deal", edit_deal_path(user_id: current_user.id, deal_id: deal.id) %> </td>
      </tr>
    <% end %>
  </table>
</div>
