  <h1 class='center'> Edit Account </h1>
  <%= form_for :user, :html => {:class => "form-horizontal"}, url: update_user_path, method: :patch do |f| %>
    <div class="form-group", style="width:30%;margin-left: auto;margin-right: auto;">
      <%= f.label :name, "Name:" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group", style="width:30%;margin-left: auto;margin-right: auto;">
      <%= f.label :email, "Email:" %>
      <%= f.text_field :email, class: "form-control" %>
    </div>
    
     <div class="form-group", style="width:30%;margin-left: auto;margin-right: auto;">
      <%= f.label :password, "Password:" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    
    <div class="form-group", style="width:30%;margin-left: auto;margin-right: auto;padding-bottom:40px;">
      <%= f.label :password_confirmation, "Confirm Password:" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>

    <div class="form-group", style="width:30%;margin-left: auto;margin-right: auto;">
      <%= f.label :address, "Street Address:" %>
      <%= f.text_field :address, class: "form-control" %>
    </div>

    <div class="form-group", style="width:30%;margin-left: auto;margin-right: auto;">
      <%= f.label :phone_number, "Phone Number:" %>
      <%= f.text_field :phone_number, class: "form-control" %>
    </div>
    
    <div class="form-group", style="width:30%;margin-left: auto;margin-right: auto;padding-bottom:30px;">
      <%= f.label :website, "Website:" %>
      <%= f.text_field :website, class: "form-control" %>
    </div>

    <div class="form-group", style="width:30%;margin-left: auto;margin-right: auto;padding-bottom:30px;">
      <%= f.label :avatar, "Picture:" %>
      <%= f.file_field :avatar, class: "form-control" %>
    </div>
    
    <%= f.submit "Submit", class: "btn btn-info btn-circle btn-xl", style:"width:30%;display:table;
   margin:0 auto" %>
  <% end %>

  <br><br><br>
  <p class = 'center'> <%= link_to "Add Food Deal", new_deal_path(@user) %>
                        | <%= link_to "Show Food Deals", show_deals_path(@user) %> </p>
