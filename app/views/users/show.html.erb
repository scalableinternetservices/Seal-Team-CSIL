

 <h1 class='center'> User Profile </h1>
   <%= form_for :user, :html => {:class => "form-horizontal"}, url: '/users/:id/users#show' do |f| %>

    <div class="form-group", style="width:30%;margin-left: auto;margin-right: auto;">
      <%= f.label :name, "Name:" %>
      <%= @user.name %>
    </div>

    <div class="form-group", style="width:30%;margin-left: auto;margin-right: auto;">
      <%= f.label :email, "Email:" %>
      <%= @user.email %>
    </div>
    
    <div class="form-group", style="width:30%;margin-left: auto;margin-right: auto;">
      <%= f.label :food_type, "Style of Food:" %>
      <%= @user.food_type %>
    </div>

    <div class="form-group", style="width:30%;margin-left: auto;margin-right: auto;">
      <%= f.label :address, "Address:" %>
      <%= @user.address %>
    </div>

    <div class="form-group", style="width:30%;margin-left: auto;margin-right: auto;">
      <%= f.label :phone_number, "Phone Number:" %>
      <%= @user.phone_number %>
    </div>

    <div class="form-group", style="width:30%;margin-left: auto;margin-right: auto;">
      <%= f.label :hours, "Hours:" %>
      <%= @user.hours %>
    </div>

    <div class="form-group", style="width:30%;margin-left: auto;margin-right: auto;">
      <%= f.label :delivery, "Delivery?" %>
      <%= @user.delivery %>
    </div>
    
    <div class="form-group", style="width:30%;margin-left: auto;margin-right: auto;">
      <%= f.label :website, "Website:" %>
      <%= @user.website %>
    </div>
    
    <div class="form-group", style="width:30%;margin-left: auto;margin-right: auto;">
      <%= f.label :avatar, "Picture:" %>
      <%= @user.avatar.url %>
    </div>
  
  <% end %>
  
<p class = 'center'> <%= link_to "Home", root_path %> | <%= link_to "Add Food Deal", new_deal_path(@user) %> | <%= link_to "Show Food Deals", show_deals_path(@user) %> | <%= link_to "Edit", edit_user_path(@user) %> </p>

